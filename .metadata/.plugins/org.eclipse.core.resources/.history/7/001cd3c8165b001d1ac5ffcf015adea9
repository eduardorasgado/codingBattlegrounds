package com.hackerrank.interviewPreparationKit.warmUpChallenges;

import java.util.ArrayList;
import java.util.List;

public class JumpingOnTheClouds {
	
	/*                 
	 * [ 0 1 0 0 0 1 0]
	 * 
	 */
	public static void main(String[] args) {
		ArrayList<Integer> arr1 = new ArrayList<>() {
			{
				add(0); add(1); add(0); add(0); add(0); add(1); add(0);
			}
		};
		
		System.out.println(arr1);		
	}
	
	public static int call(List<Integer> clouds) {
		int minJumps = 0;
		int cloudLen = clouds.size();
		int[] sightArr = new int[]{0, 0, 0};

		int currentCloud = 0;		
		boolean endFound = false;
		
		boolean isnextStepPossible;
		while(!endFound) {
			isnextStepPossible = clouds.get(currentCloud) == 0 ? true : false;
			if(currentCloud == cloudLen - 1) {
				endFound = true;
			}
		}
		
		return minJumps;
	}
}
